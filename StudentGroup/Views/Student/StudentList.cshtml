@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<StudentGroup.Models.Student>

@{
    ViewBag.Title = "Каталог студентов";
}

<h3>Каталог студентов группы @Model.FirstOrDefault().Group.Name</h3>
<p>
    @Html.ActionLink("Добавить студента", "CreateStudent")
</p>
<table>
    <tr>
        <td><p>ID студента</p></td>
        <td><p>Имя</p></td>
        <td><p>Фамилия</p></td>
        <td><p>ID группы</p></td>
        <td><p>Имя группы</p></td>
        <td></td>
    </tr>
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.GroupId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.Name)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "EditStudent", new { id = item.Id }) |
                    @Html.ActionLink("Удалить", "DeleteStudent", new { id = item.Id })
                </td>
            </tr>
        }
    }
</table>




