@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<StudentGroup.Models.Course>
@{
    ViewBag.Title = "Список курсов";
}

    <h3>Список курсов</h3>
<p>
    @Html.ActionLink("Добавить студента", "CreateStudent")
</p>
<p>
    @Html.ActionLink("Добавить группу", "CreateGroup")
</p>
<table>
    <tr>
        <td><p>ID курса</p></td>
        <td><p>Имя курса</p></td>
        <td><p>Описание курса</p></td>
        <td></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>

            <td>
                @Html.ActionLink("Выбрать", "GroupsList", new { id = item.Id })
            </td>
        </tr>
    }
</table>





